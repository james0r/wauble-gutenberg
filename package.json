{
  "name": "wauble-starter-theme",
  "description": "A simple Webpack-based Wordpress starter theme.",
  "version": "1.0.0",
  "scripts": {
    "start": "NODE_ENV=development webpack --watch --config webpack/webpack.dev.js & npm run watch:scss-modules",
    "dev": "npm run start",
    "watch:scss-modules": "sass --watch ./src/scss/modules:./dist/css --style=expanded",
    "build": "NODE_ENV=production npm run build:bundles && npm run build:scss-modules",
    "build:bundles": "webpack --config webpack/webpack.prod.js",
    "build:scss-modules": "sass ./src/scss/modules:./dist/css --style=compressed"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "babel-loader": "^8.2.3",
    "browser-sync-webpack-plugin": "^2.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^10.0.0",
    "css-loader": "^6.5.1",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.4.5",
    "sass": "^1.51.0",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.2.5",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@alpinejs/collapse": "^3.10.2",
    "alpinejs": "^3.10.2"
  }
}
